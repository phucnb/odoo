<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="mail.Message" t-inherit-mode="extension">
        <xpath expr="//t[@t-if('!props.isSquashed')]/div[hasclass('o_Message_header')]/div[hasclass('o_Message_headerDate')]"
               position="replace">
            <div class="o_Message_date o_Message_headerDate"
                 t-att-class="{ 'o-message-selected': props.isSelected }"
                 t-att-title="datetime">
                - <t t-esc="message.dateFromNow"/> / <t t-esc="message.date"/>
            </div>
        </xpath>
    </t>
</templates>