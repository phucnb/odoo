<odoo>
    <data>
        <record model="ir.ui.view" id="Lead_form_inherit">
            <field name="name">lead.form.inherit</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                     <field name="end_user"  />
                </field>
                <field name="team_id" position="after">
                    <field name="isr" />
                    <field name="opportunity_number"/>
                    <field name="opportunity_link" />
                    <field name="quote_number"/>
                    <field name="quote_link" />
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="mail_activity_form_inherit">
            <field name="name">mail.activity.form.inherit</field>
            <field name="model">mail.activity</field>
            <field name="inherit_id" ref="mail.mail_activity_view_form_popup"/>
            <field name="arch" type="xml">
            <xpath expr="//field[@name='note']" position="before">
                    <group>
                      
                    </group>
            </xpath>
            </field>
        </record>

    </data>
</odoo>

