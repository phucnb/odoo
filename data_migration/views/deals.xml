<odoo>
    <data>
        <record model="ir.ui.view" id="Lead_form_inherit">
            <field name="name">lead.form.inherit</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">
               
                <field name="team_id" position="after">
                    <field name="deal_owner" options="{'no_create': True, 'no_edit': True, 'no_create_edit': True}" widget="many2one_avatar_user"/>
                    <field name="isr" />
                    <field name="opportunity_number"/>
                    <field name="opportunity_link" />
                    <field name="quote_number"/>
                    <field name="quote_link" />
                </field>
                  <xpath expr="//form[1]/sheet[1]/group[1]/group[@name='opportunity_partner']/field[@name='partner_id']" position="after">
                    <field name="end_user"/>
                  </xpath>
            </field>
        </record>

