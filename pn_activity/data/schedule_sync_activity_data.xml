<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="1">
        <!-- Action tạo schedule để chạy có thể bỏ vì chạy SQL -->
        <record model="ir.cron" id="pn_activities_sync_mail_activity_data_cron">
            <field name="name">Mail Activity: Sync Overview Data</field>
            <field name="model_id" ref="pn_activity.model_mail_activity_overview"/>
            <field name="interval_number">1</field>
            <field name="interval_type">months</field>
            <field name="numbercall">1</field>
            <field name="active" eval="False"/>
            <field name="doall" eval="False"/>
            <field name="state">code</field>
            <field name="code">model.sync_mail_activity_data_to_overview()</field>
        </record>
    </data>
</odoo>