<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="module_activity_overview_manager" model="ir.module.category">
            <field name="name">Activity</field>
            <field name="description">Helps you handle your activity.</field>
            <field name="sequence">17</field>
        </record>

        <record id="group_activity_own_document" model="res.groups">
            <field name="name">Own Documents</field>
            <field name="category_id" ref="module_activity_overview_manager"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">the user will have access to his own data in the activity.</field>
        </record>

        <record id="group_activity_all_document" model="res.groups">
            <field name="name">All Documents</field>
            <field name="category_id" ref="module_activity_overview_manager"/>
            <field name="implied_ids" eval="[(4, ref('group_activity_own_document'))]"/>
            <field name="comment">the user will have access to all records of everyone in the activities.</field>
        </record>
    </data>
</odoo>