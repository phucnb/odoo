<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="mail_activity_rule_own_document" model="ir.rule">
            <field name="name">Mail Activity: Own Document: write/unlink only (created or assigned)</field>
            <field name="model_id" ref="mail.model_mail_activity"/>
            <field name="domain_force">['|', ('user_id', '=', user.id), ('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('pn_activity.group_activity_own_document'))]"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="mail_activity_rule_all_document" model="ir.rule">
            <field name="name">Mail Activity: All Document</field>
            <field name="model_id" ref="mail.model_mail_activity"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('pn_activity.group_activity_all_document'))]"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="activity_manager_own_document_rule" model="ir.rule">
            <field name="name">Activity: Own Document</field>
            <field ref="pn_activity.model_mail_activity_overview" name="model_id"/>
            <field name="domain_force">['|',('create_uid', '=', user.id), ('user_id','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('pn_activity.group_activity_own_document'))]"/>
        </record>

        <record id="activity_manager_all_document_rule" model="ir.rule">
            <field name="name">Activity: All Document</field>
            <field ref="pn_activity.model_mail_activity_overview" name="model_id"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('pn_activity.group_activity_all_document'))]"/>
        </record>
    </data>
</odoo>