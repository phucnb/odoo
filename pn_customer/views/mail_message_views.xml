<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="pn_customer_mail_message_tree_view" model="ir.ui.view">
            <field name="name">pn.customer.mail.message.tree.view</field>
            <field name="model">mail.message</field>
            <field name="arch" type="xml">
                <tree string="Messages">
                    <field name="date"/>
                    <field name="subject"/>
                    <field name="author_id"/>
                </tree>
            </field>
        </record>

        <record id="pn_customer_mail_message_form_view" model="ir.ui.view">
            <field name="name">pn.customer.mail.message.form.view</field>
            <field name="model">mail.message</field>
            <field name="arch" type="xml">
                <form string="Messages">
                    <sheet>
                        <group>
                            <group>
                                <field name="subject"/>
                                <field name="date"/>
                                <field name="email_from"/>
                                <field name="author_id"/>
                            </group>
                            <group>
                                <field name="message_type"/>
                                <field name="subtype_id"/>
                                <field name="is_internal"/>
                                <field name="model"/>
                                <field name="res_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Body" name="body">
                                <field name="body" options="{'style-inline': true}"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>